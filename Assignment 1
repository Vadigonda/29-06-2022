std={}
n=int(input("enter no of employees:"))
for i in range(1,n+1):
    l=[]
    name=input("enter name of the employee:") 
    l.append(name)
    designation=input("enter desig of the employee:")
    l.append(designation)
    empsal=int(input("enter salary of the employee:"))
    l.append(empsal)
    empphno=int(input("enter employee phno:"))
    l.append(empphno)
    std[i]=l
print(std)
output

